!!! Xterm

! UTF-8 support
XTerm.vt100.locale: true

! Font. Oh, and also disable nasty bold fonts pls. 
XTerm.vt100.faceName: Ttyp0:size=8:style=Regular
!XTerm.vt100.faceName: Ttyp0
XTerm.vt100.faceSize5: 13 
XTerm.vt100.faceSize6: 15
XTerm*allowBoldFonts: false 

! Dynamic font size change
XTerm.vt100.translations: #override \n\
  Ctrl <Key> minus: smaller-vt-font() \n\
  Ctrl <Key> plus: larger-vt-font()

! Copy and Paste
XTerm*VT100.Translations: #override \
Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
Ctrl Shift <Key>C: copy-selection(CLIPBOARD)

!!! URXVT stuff

Urxvt.vt100.translations: #override \n\
  Ctrl <Key> minus: smaller-vt-font() \n\
  Ctrl <Key> plus: larger-vt-font()


! Font. Oh, and also disable nasty bold fonts pls. 
URxvt.font: -uw-*-medium-r-*-*-12-*-*-*-*-*-iso10646-1 
URxvt.boldFont: -uw-*-medium-r-*-*-12-*-*-*-*-*-iso10646-1 

URxvt.scrollBar: false
URxvt.fading: 30

! Emacs
Emacs.font: -uw-*-medium-r-*-*-12-*-*-*-*-*-iso10646-1 
Emacs.toolBar: off
Emacs.menuBar: off
Emacs.Background: black
Emacs.Foreground: white 
