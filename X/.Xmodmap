! Change right click button to mod4
keysym Menu = Super_R
add Mod4 = Super_R

! Map Alt to Caps Lock
clear Lock
keycode 66 = Alt_L

! Swap Alt_L with Altgr
clear mod1
clear mod5
keycode 64 = ISO_Level3_Shift
keycode 108 = Alt_L
add mod1 = Alt_L
add mod5 = ISO_Level3_Shift

! Map Print to Super/Mod4.
! My Thinkpad has a print key to the right of
! the spacebar, which is useful for awesomewm
add mod4 = Print
