[bar/main]
monitor = ${env:MONITOR}	
width = 100%
height = 25
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #fff
border-size = 0
border-color = #00000000
padding-left = 1
padding-right = 2
module-margin-left = 2
module-margin-right = 2

; font-N = <fontconfig pattern>;<vertical offset>

; Settings with Iosevka
font-0 = Iosevka Nerd Font:pixelsize=12:style=Light;1
font-1 = Iosevka:size=15;1

; Settings with UW Ttyp0 
;;font-0 = UW Ttyp0:size=13;1
;;font-1 = UW Ttyp0:size=17;1
;;font-2 = Iosevka:size=20;4

modules-left = xworkspaces
modules-center = 
modules-right = alsa filesystem memory cpu battery temperature date wlan
tray-position = right
tray-padding = 2
override-redirect = true
cursor-click = pointer
cursor-scroll = ns-resize
bottom = true

[bar/laptop]
inherit = bar/main
monitor = eDP-1

[bar/monitor]
inherit = bar/main
monitor = HDMI-2
modules-left = xworkspaces

[module/xwindow]
type = internal/xwindow
label = %title:0:20%
label-foreground = ${colors.foreground}
label-empty = " "
label-empty-foreground = ${colors.magenta-1}

[module/xworkspaces]
type = internal/xworkspaces
pin-workspaces = false
enable-click = true
enable-scroll = true
format = <label-state>
; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-active = "%name% %icon%   "
label-active-foreground = ${colors.magenta-2}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = "%name% %icon%   "
; label-urgent-foreground = ${colors.red-2}
; label-urgent-background = ${colors.background}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-empty = "%name% %icon%   " 
; label-empty-foreground = ${colors.white-1}

label-occupied = "%name% %icon%   "
; label-occupied-foreground = ${colors.white-1}
icon-0 = term;
icon-1 = web;
icon-2 = reading;
icon-3 = random;

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted-foreground = ${colors.blue-2}
label-mounted = %mountpoint%: %{F-}%percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/xbacklight]
type = internal/xbacklight
format = <label> <bar>
label = BL
bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU: "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.blue-1}
label = %percentage:3:3%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM: "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.red-1}
label = %percentage_used:3:3%%

[module/wlan]
type = internal/network
interface = wlan0
interval = 1
format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.green-2}
label-connected = %essid%
format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.red-2}
label-disconnected = Disconnected
label-disconnected-foreground = ${colors.foreground}
ramp-signal-0 = ▁
ramp-signal-1 = ▂
ramp-signal-2 = ▃
ramp-signal-3 = ▄
ramp-signal-4 = ▅
ramp-signal-5 = ▆
ramp-signal-foreground = ${colors.green-2}

[module/eth]
type = internal/network
interface = 
interval = 3.0
format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5
date = "%a %d-%b-%Y "
time = %H:%M
time-alt = %H:%M:%S
format-prefix =
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.magenta-2}
label = %date% %time%

[module/alsa]
type = internal/alsa
format-volume = <label-volume> <bar-volume>
label-volume =  %percentage%%
label-volume-foreground = ${root.foreground}
label-muted =  muted
label-muted-foreground = #666
bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 100
format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.white-2}
format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${colors.yellow-2}
format-full-prefix = "FULL "
format-full-prefix-foreground = ${colors.green-2}
format-full-underline = ${self.format-charging-underline}
animation-charging-0 = "BAT ▲"
animation-charging-foreground = ${colors.white-2}
animation-discharging-0 = "BAT ▼"
animation-discharging-foreground = ${colors.yellow-2}


[module/temperature]
type = internal/temperature
; This setting indicates which device's temp is tracked
; If for some reason in future configurations the temperature module acts up
; it is probably due to this option. 
; Thermal zones can be examined under /sys/class/hwmon or /sys/class/thermal
thermal-zone = 0
warn-temperature = 60
format = <label>
format-underline = ${colors.cyan-2}
format-warn = <label-warn>
format-warn-underline = ${colors.red-2}
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.foreground}

