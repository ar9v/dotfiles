#!/bin/bash

# Script to choose a window manager

while true
do
    echo "Select a window manager"
    echo "[1] i3"
    echo "[2] stumpwm"
    echo "Any other key exits"

cat << EOF > ~/.xsession
#!/bin/bash

xmodmap .xmodmap
EOF

    read session
    case $session in
        1) echo "exec $(which i3)" >> ~/.xsession ;;
        2) echo "exec $(which stumpwm)" >> ~/.xsession ;;
        *) break ;;
    esac

    startx
done

exit 0
