#!/bin/bash
# A little script to perform system operations in i3 (logout, shutdown, suspend, etc.)

lock() {
    i3lock --image=/home/argv/Pictures/JdDoodles/SaborYellow.png
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        lock && systemctl suspend
        ;;
    hibernate)
        lock && systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}" 
        exit 2
esac

exit 0
