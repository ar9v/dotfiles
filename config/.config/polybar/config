[colors]
background	= ${xrdb:background:#222}
background-alt	= #444
foreground	= ${xrdb:foreground:#222}
foreground-alt	= #555
black-1		= ${xrdb:color0:#222}
black-2		= ${xrdb:color8:#222}
red-1		= ${xrdb:color1:#222}
red-2		= ${xrdb:color9:#222}
green-1		= ${xrdb:color2:#222}
green-2		= ${xrdb:color10:#222}
yellow-1	= ${xrdb:color3:#222}
yellow-2	= ${xrdb:color11:#222}
blue-1		= ${xrdb:color4:#222}
blue-2		= ${xrdb:color12:#222}
magenta-1	= ${xrdb:color5:#222}
magenta-2	= ${xrdb:color13:#222}
cyan-1		= ${xrdb:color6:#222}
cyan-2		= ${xrdb:color14:#222}
white-1		= ${xrdb:color7:#222}
white-2		= ${xrdb:color15:#222}

[bar/example]
monitor = ${env:MONITOR:}
width = 100%
height = 25
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true
bottom = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #fff
border-size = 0
border-color = #00000000
padding-left = 1
padding-right = 2
module-margin-left = 2
module-margin-right = 2
font-0 = Iosevka:pixelsize=12:style=Light;1
font-1 = FontAwesome:size=15;2
;font-0 = siji:pixelsize=10;1
modules-left = xworkspaces
modules-center = 
modules-right = filesystem memory cpu battery temperature date wlan
tray-position = right
tray-padding = 2
;tray-background = #0063ff
; To allow other windows to be placed above the bar, or to avoid having the bar visible when
; in fullscreen mode, you need to use the following two parameters. Note that it will tell the
; window manager to back off so no area will be reserved, etc.
override-redirect = false
cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:20%
label-foreground = ${colors.foreground}
label-empty = " "
label-empty-foreground = ${colors.magenta-1}

[module/xworkspaces]
type = internal/xworkspaces
pin-workspaces = true
enable-click = false
enable-scroll = false
format = <label-state>
; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-active = "%icon%   "
label-active-foreground = ${colors.white-2}
label-active-background = ${colors.background}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = "%icon%   "
label-urgent-foreground = ${colors.red-2}
label-urgent-background = ${colors.background}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-empty = "%icon%   "
label-empty-foreground = #55
icon-0 = term;
icon-1 = web;
icon-2 = reading;
icon-3 = random;

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted-foreground = ${colors.blue-2}
label-mounted = %mountpoint%: %{F-}%percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/xbacklight]
type = internal/xbacklight
format = <label> <bar>
label = BL
bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU: "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.blue-1}
label = %percentage:3:3%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM: "
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.red-1}
label = %percentage_used:3:3%%

[module/wlan]
type = internal/network
interface = wlp61s0
interval = 1
format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.green-2}
label-connected = %essid%
format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.red-2}
label-disconnected = Disconnected
label-disconnected-foreground = ${colors.foreground}
ramp-signal-0 = ▁
ramp-signal-1 = ▂
ramp-signal-2 = ▃
ramp-signal-3 = ▄
ramp-signal-4 = ▅
ramp-signal-5 = ▆
ramp-signal-foreground = ${colors.green-2}

[module/eth]
type = internal/network
interface = 
interval = 3.0
format-connected-underline = #55aa55
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%
format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5
date = "%a %d-%b-%Y "
time = %H:%M
time-alt = %H:%M:%S
format-prefix =
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.magenta-2}
label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume> <bar-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}
label-muted = 🔇 muted
label-muted-foreground = #666
bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 100
format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.white-2}
format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${colors.yellow-2}
format-full-prefix = "FULL "
format-full-prefix-foreground = ${colors.green-2}
format-full-underline = ${self.format-charging-underline}
animation-charging-0 = "BAT ▲"
animation-charging-foreground = ${colors.white-2}
animation-discharging-0 = "BAT ▼"
animation-discharging-foreground = ${colors.yellow-2}


[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
format = <label>
format-underline = ${colors.cyan-2}
format-warn = <label-warn>
format-warn-underline = ${colors.red-2}
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.foreground}

[settings]
screenchange-reload = true
compositing-background = xor
compositing-foreground = source
compositing-border = over
pseudo-transparency = false

