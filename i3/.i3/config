set $urgent-bg-color        #ffffff
set $inactive-button-color  #992200
set $active-button-color    #ff0000 

# mode                      border              background           text                   indicator
client.focused              $bg-color           $bg-color            $text-color            #000000
client.unfocused            $inactive-bg-color  $inactive-bg-color   $inactive-text-color   #000000
client.focused_inactive     $inactive-bg-color  $inactive-bg-color   $inactive-text-color   #000000
client.urgent               $urgent-bg-color    $urgent-bg-color     $bg-color              #000000

# hides the edges that indicate where new windows will be created
hide_edge_borders both
