bindsym $mod+Shift+e exec "i3-nagbar -f Ttyp0:size=9 -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
